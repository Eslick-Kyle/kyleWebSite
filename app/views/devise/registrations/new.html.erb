<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "form-signin"}) do |f| %>
  <%= devise_error_messages! %>
<h2 class="form-signin-heading">Sign up</h2>
  <div class="field">
    <%= f.label :email, class: "sr-only" %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email address" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "sr-only" %>
    <% if @minimum_password_length %>
    <p style="text-align:center;">(<%= @minimum_password_length %> characters minimum)</p>
    <% end %>
    <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: "sr-only" %>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirm assword" %>
  </div>

  <%= render "devise/shared/links" %>
  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-lg btn-primary btn-block" %>
  </div>
<% end %>
